!!!5
%html
  %head
    %meta{ charset: 'utf-8' }
    %title
      = current_page.data.title || 'Christian Fleschhut: Frontend Developer &middot; Berlin, Germany'
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    = stylesheet_link_tag 'screen', media: 'screen'
    %link{ href: 'http://fonts.googleapis.com/css?family=Open+Sans:300,300italic,400,400italic,700,700italic', rel: 'stylesheet', type: 'text/css' }
    %link{ href: 'http://fonts.googleapis.com/css?family=Merriweather:300,400,400italic,700,700italic', rel: 'stylesheet', type: 'text/css' }
    %link{ href: '//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css', rel: 'stylesheet' }
    = javascript_include_tag 'main'
    = favicon_tag 'favicon.ico'

  %body{ class: "#{page_classes}", data: { spy: 'scroll', target: '#navbar' } }

    = partial :navbar
    = partial :intro

    .container
      = yield

    = partial :footer
